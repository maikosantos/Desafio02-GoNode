<section id="main">
  <div class="container">
    <header>
      <h2>
      {% for project in projects %}
        {{ project.title }}
      {% endfor %}

      </h2>
      <div class="addon">
      <form action="/app/projects/{{activeProject}}?_method=DELETE" method="post">
        <button type="submit" class="btn btn-danger">Excluir projeto</button>
      </form>
      </div>
    </header>

    <section id="content">
      <nav>
        <div class="sessions">
          {% for session in sessions %}
            <a href="/app/projects/{{ activeProject }}/sessionsProject/{{ session.id }}">
              {{ session.title }}
            </a>
          {% endfor %}
        </div>

        <form action="/app/projects/{{ activeProject }}/sessionsProject/create" method="POST">
          <input type="text" name="title" placeholder="Nova seção">
          <button type="submit" class="btn"><img src="/img/plus.svg"></button>
        </form>
      </nav>

      {% include 'sessions/show.njk' %}

    </section>

  </div>
</section>
