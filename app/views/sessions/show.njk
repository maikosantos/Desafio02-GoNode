{% extends 'layouts/default.njk' %}

{% block body %}

<div class="wrapper">

    <section id="main">
      <div class="container">
        <section id="content">

              <article>
                  <div class="project-header">
                    <h1> {{ currentSession.title }}</h1>
                    <a href="/app/projects/{{activeProject}}/sessionsProject/edit/{{currentSession.id}}" class="edit">Editar seção</a>
                    <form action="/app/projects/{{activeProject}}/sessionsProject/{{currentSession.id}}?_method=DELETE" method="post">
                      <button type="submit" class="delete">Remover seção</button>
                    </form>
                  </div>
                  {{ currentSession.formatedContent | safe }}
              </article>

        </section>
      </div>
    </section>

</div>

{% endblock %}
